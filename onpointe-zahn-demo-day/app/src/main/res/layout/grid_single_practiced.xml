<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/singlegridbackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"

    >


    <ImageView
        android:id="@+id/grid_image_practiced"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:padding="20dp"
        android:background="@android:color/transparent"
        android:src="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ImageView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/grid_star_practiced"
        android:background="@android:color/transparent"
        android:layout_below="@+id/grid_image_practiced"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:src="@drawable/balleticon7" />

    <TextView
        android:id="@+id/grid_text_practiced"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="Plie"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/grid_star_practiced"
        android:layout_toRightOf="@+id/grid_star_practiced"
        android:layout_alignRight="@+id/grid_image_practiced"
        android:layout_alignEnd="@+id/grid_image_practiced"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">
    </TextView>


</RelativeLayout>

