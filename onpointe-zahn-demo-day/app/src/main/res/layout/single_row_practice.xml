<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.example.rene.dancesafe.practice_existing">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/single_row_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo2"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/single_row_text"
        android:layout_alignTop="@+id/single_row_thumbnail"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:id="@+id/single_row_btn"
        android:background="@drawable/next"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:layout_below="@+id/single_row_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>